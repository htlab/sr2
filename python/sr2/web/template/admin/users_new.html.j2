{% extends "_layout.html.j2" %}
{% block header %}
  <!-- header comment -->
{% endblock %}
{% block content %}
  <h1>Add new user</h1>
  [<a href="/admin/users/">Back</a>][<a href="/logout">Logout</a>]

  {% if err_msg %}
    <ul>
      {% for msg in err_msg %}
        <li>{{msg}}</li>
      {% endfor %}
    </ul>
  {% endif %}

  <form action="/admin/users/new" method="POST">
    LoginID=<input type="text" name="login" size="30" value="{{input_login}}"><br>
    Password=<input type="password" name="pw" size="30"><br>
    Password(confirm)=<input type="password" name="pw2" size="30"><br>
    Role=<input type="radio" name="level" value="0" checked="checked">Normal <input type="radio" name="level" value="10">Admin<br>
    <input type="submit" value="Add new user">
  </form>
{% endblock %}
